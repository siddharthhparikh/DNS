extends layout

block content
  script(type='text/javascript').
    setAuth("#{username}");
  .menu-bar
    a(href='/')
      span.menu-bar-item.first Home
    a(href='/buyasset')
      span.menu-bar-item Purchase an Asset
    a(href='/tradeasset')
      span.menu-bar-item Open a Trade
    a(href='/lookup')
      span.menu-bar-item Lookup Users/Assets
    a(href='/myassets')
      span.menu-bar-item My Assets
    a(href='/mytrades')
      span.menu-bar-item My Trades
    a(href='/myaccount')
      span.menu-bar-item My Account
  .container.large
    .trades-list-container
      h2 My Trades
      #myTradesTableStats
      table#myTradesTable
        thead
          tr 
            th Name
            th User
            th Status
            th Quantity
            th Value
            th Actions
        tbody
          tr
            td(colspan='6')
              .loading-dot2
              .loading-dot2.second
              .loading-dot2.third
      #TradeTableResults.resultBox